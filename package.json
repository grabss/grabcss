{
  "name": "grabcss",
  "version": "0.2.0",
  "description": "A minimal, utility-first CSS framework for rapid UI development.",
  "license": "MIT",
  "author": "grabss Inc.",
  "homepage": "https://grabss.co.jp",
  "repository": {
    "type": "git",
    "url": "https://github.com/grabss/grabcss.git"
  },
  "keywords": [
    "css",
    "postcss",
    "css-framework",
    "utility-first",
    "minimal"
  ],
  "type": "module",
  "main": "./dist/grab.css",
  "style": "./dist/grab.css",
  "exports": {
    ".": {
      "import": "./dist/grab.css",
      "require": "./dist/grab.css"
    },
    "./scss": "./src/styles/index.scss"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.7.6",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "rollup-plugin-copy": "^3.5.0",
    "sass-embedded": "^1.80.1",
    "the-new-css-reset": "^1.11.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.9.0",
    "vite": "^6.3.5"
  },
  "packageManager": "pnpm@10.12.1"
}
